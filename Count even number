#include<stdio.h>
int main()
{
int i,j,n,a[50],count=0;
printf("Enter the limit:");
scanf("%d",&n);
printf("Array elemets is:");
for(i=0;i<n;i++)
{
    scanf("%d",&a[i]);
}
printf("elements:");
for(i=0;i<n;i++)
{
    printf("%d\t",a[i]);
}
printf("\neven number:");
for(i=0;i<n;i++)
{
if (a[i]%2==0)
{
    printf("%d\t",a[i]);
    count++;
}
}
printf("\nodd number:");
for(i=0;i<n;i++)
{
    if (a[i]%2!=0)
    {
        printf("%d\t",a[i]);
    }
}
printf("\nTotal even numbers %d",count);

return 0;
}
