#include <stdio.h>
int main() {
int a[50][50],b[50][50],c[50][50],i,j,n,m;
printf("Enter the row size:");
scanf("%d",&n);
printf("Enter the column size:");
scanf("%d",&m);
printf("Enter first array elements are:\n");
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    {
        scanf("%d",&a[i][j]);
    }
}
printf("Fist array elemnts is:\n");
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    {
        printf("%d\t",a[i][j]);
    }
    printf("\n");
}
printf("Enter second array elements:\n");
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    {
        scanf("%d",&b[i][j]);
    }
}
printf("Second array elemnts is:\n");
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    {
        printf("%d\t",b[i][j]);
    }
    printf("\n");
}
printf("Resultant matrix is:\n");
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    {
        c[i][j]=a[i][j]+b[i][j];
    }
}
for(i=0;i<n;i++)
{
    for(j=0;j<m;j++)
    {
        printf("%d\t",c[i][j]);
    }
    printf("\n");
}
    return 0;
}
