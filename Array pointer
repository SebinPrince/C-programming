// Program to read and print array elements.
#include <stdio.h>

int main()
{
    int a[50],i,j,n;
    printf("Size of array:");
    scanf("%d",&n);
    int *aptr=a;
    printf("Enter the elements:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("Elements are:\n");
    for(i=0;i<n;i++)
    {
        printf("a[%d]=%d\n",i,*(aptr+i));
    }
    return 0;
}
