// Factorial using function
#include <stdio.h>
int factorial(int n){
    if(n==0 || n==1)
        return 1;
    else
        return n*factorial(n-1);
}
int main(){
    int num;
    printf("Enter a number:");
    scanf("%d",&num);
if(num<0)
{
    printf("Negative number has no factorial");
}
else
{
    printf("Factorial is %d",factorial(num));
}
    return 0;
}
